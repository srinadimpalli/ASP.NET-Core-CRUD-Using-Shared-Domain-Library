@model AspNetCoreFactory.Mvc.Areas.Products.Models.Detail
@{
    ViewBag.Title = "Product Details";
}

<h1>Product Details</h1>

<div class="row pb-100">
    <div class="col-12 col-sm-6">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">@Model.Name</div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Price</label>
            <div class="col-sm-8">@Model.FormattedPrice</div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Orders</label>
            <div class="col-sm-8">@Model.TotalOrdersFormatted</div>
        </div>
        <hr />
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">&nbsp;</label>
            <div class="col-sm-8">
                <a class="btn btn-light btn-sm" href="javascript:history.back();">Cancel</a>
            </div>
        </div>
    </div>
</div>

