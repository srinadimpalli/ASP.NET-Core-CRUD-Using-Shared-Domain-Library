@model AspNetCoreFactory.Mvc.Areas.Customers.Models.Detail
@{
    ViewBag.Title = "Customer Detail";
}

<h1>Customer Details</h1>
<div class="row pb-80">
    <div class="col-12 col-md-6">
        <div class="form-group row">
            <label for="FirstName" class="col-4 col-form-label">First Name</label>
            <div class="col-8"><input type="text" asp-for="FirstName" readonly class="form-control-plaintext"></div>
        </div>
        <div class="form-group row">
            <label for="LastName" class="col-4 col-form-label">Last Name</label>
            <div class="col-8"><input type="text" asp-for="LastName" readonly class="form-control-plaintext"></div>
        </div>
        <div class="form-group row">
            <label for="Email" class="col-4 col-form-label">Email</label>
            <div class="col-8"><input type="text" asp-for="Email" readonly class="form-control-plaintext"></div>
        </div>
        <div class="form-group row">
            <label for="TotalOrdersFormatted" class="col-4 col-form-label">Orders</label>
            <div class="col-8"><input type="text" asp-for="TotalOrdersFormatted" readonly class="form-control-plaintext"></div>
        </div>
        <hr />
        <div class="form-group row">
            <label class="col-4 ">&nbsp;</label>
            <div class="col-8 ">
                <a class="btn btn-light btn-sm" href="javascript:history.back();">Cancel</a>
            </div>
        </div>
    </div>
</div>
