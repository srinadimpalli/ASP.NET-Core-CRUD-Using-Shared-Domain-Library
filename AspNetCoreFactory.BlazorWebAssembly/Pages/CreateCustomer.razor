@page "/createcustomer"
<h1>Create customer component</h1>

<EditForm EditContext="_editContext" OnValidSubmit="Create" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">First Name:</label>
        <div class="col-md-10">
            <InputText id="firstname" class="form-control" @bind-Value="CustomerForCreateDto.FirstName" />
            <ValidationMessage For="@(() => CustomerForCreateDto.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-md-2 col-form-label">Last Name:</label>
        <div class="col-md-10">
            <InputText id="lastName" class="form-control"
            @bind-Value="CustomerForCreateDto.LastName" />
            <ValidationMessage For="@(() => CustomerForCreateDto.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="supplier" class="col-md-2 col-form-label">Email:</label>
        <div class="col-md-10">
            <InputText id="email" class="form-control" @bind-Value="CustomerForCreateDto.Email" />
            <ValidationMessage For="@(() => CustomerForCreateDto.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="supplier" class="col-md-2 col-form-label">Total Orders:</label>
        <div class="col-md-10">
            <InputSelect @bind-Value="TotalOrdersSelected" class="dropdown">
                <option value="">Select TotalOrders ...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </InputSelect>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success"
            disabled="@formInvalid">
                Create
            </button>
        </div>
    </div>

</EditForm>
