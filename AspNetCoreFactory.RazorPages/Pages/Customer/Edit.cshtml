@page  "/customer/edit/{id}"
@model AspNetCoreFactory.RazorPages.Pages.Customer.EditModel
@{
}

<h1>Edit Customer</h1>

<form method="post">

    <div class="row pb-100">
        <div class="col-12 col-md-6">
            <div class="form-group row">
                <label for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input type="text" asp-for=" CustomerObj.FirstName" class="form-control" />
                    <span asp-validation-for="CustomerObj.FirstName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="LastName" class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="CustomerObj.LastName" class="form-control" />
                    <span asp-validation-for="CustomerObj.LastName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="CustomerObj.Email" class="form-control" />
                    <span asp-validation-for="CustomerObj.Email"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4">&nbsp;</label>
                <div class="col-sm-8 ">
                    <hr />
                    <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                    <a class="btn btn-light btn-sm" href="/customer">Cancel</a>
                </div>
            </div>
        </div>
    </div>

</form>