@page "/orders/edit/{CustomerId?}/{productId?}"
@inject AspNetCoreFactory.InfraStructure.Caching.ILookup Lookup
@model AspNetCoreFactory.RazorPages.Pages.Orders.EditModel
@{
}
<h1>New Order</h1>

<form method="post">
    <div class="row pb-100">
        <div class="col col-sm-6">

            <div class="form-group row">
                <label for="CustomerId" class="col-sm-5 col-form-label">Customer</label>
                <div class="col-sm-7 ">
                    <select asp-for="CustomerId" asp-items="Lookup.CustomerItems" class="form-control"></select>
                    <span asp-validation-for="CustomerId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="ProductId" class="col-sm-5 col-form-label">Product</label>
                <div class="col-sm-7 ">
                    <select asp-for="ProductId" asp-items="Lookup.ProductItems" class="form-control"></select>
                    <span asp-validation-for="ProductId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-5 col-form-label">&nbsp;</label>
                <div class="col-sm-7 ">
                    <hr />
                    <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                    <a class="btn btn-light btn-sm" href="javascript:history.back();">Cancel</a>
                </div>
            </div>
        </div>
    </div>

</form>