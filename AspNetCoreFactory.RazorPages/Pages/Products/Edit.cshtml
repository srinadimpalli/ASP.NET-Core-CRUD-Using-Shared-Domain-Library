@page "/products/edit/{id?}"
@model AspNetCoreFactory.RazorPages.Pages.Products.EditModel

@{
    var title = Model.Id == 0 ? "New Product" : "Edit Product";
    ViewBag.Title = title;
}

<h1>@title</h1>

<form method="post" asp-antiforgery="true">

    <div class="row pb-100">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group row">
                <label for="FirstName" class="col-sm-4 col-form-label">Product Name</label>
                <div class="col-sm-8 ">
                    <input type="text" asp-for="Edit.Name" class="form-control" />
                    <span asp-validation-for="Edit.Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Price" class="col-sm-4 col-form-label">Price $</label>
                <div class="col-sm-8 ">
                    <input type="text" asp-for="Edit.Price " class="form-control" />
                    <span asp-validation-for="Edit.Price"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">&nbsp;</label>
                <div class="col-sm-8 ">
                    <hr />
                    <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                    <a class="btn btn-light btn-sm" href="/products">Cancel</a>
                </div>
            </div>
        </div>
    </div>

</form>