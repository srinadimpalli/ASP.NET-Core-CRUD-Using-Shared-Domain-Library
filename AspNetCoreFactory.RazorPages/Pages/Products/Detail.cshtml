@page "/products/{id}"
@model AspNetCoreFactory.RazorPages.Pages.Products.DetailModel
@{
}
<div class="row pb-100">
    <div class="col-xs-12 col-sm-6">
        <div class="form-group row">
            <label for="FirstName" class="col-sm-4 col-form-label">Product Name</label>
            <div class="col-sm-8 ">
                <input type="text" asp-for="Name" readonly class="form-control-plaintext" />

            </div>
        </div>
        <div class="form-group row">
            <label for="Price" class="col-sm-4 col-form-label">Price $</label>
            <div class="col-sm-8 ">
                <input type="text" asp-for="Price " readonly class="form-control-plaintext" />

            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">&nbsp;</label>
            <div class="col-sm-8 ">
                <hr />
                <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                <a class="btn btn-light btn-sm" href="/products">Cancel</a>
            </div>
        </div>
    </div>
</div>